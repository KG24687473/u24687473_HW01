<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RescueBus</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">
                <img src="~/Images/navIcon.png" alt="RescueBus Logo" class="logo-img" />
                <span>RescueBus</span>
            </a>
            <nav class="nav-links">
                <a href="/" class="nav-link">Home</a>
                <a href="@Url.Action("RideHistory", "Home")" class="nav-link">Ride History</a>
                <a href="@Url.Action("Manage", "Manage")" class="nav-link">Manage</a>
            </nav>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
