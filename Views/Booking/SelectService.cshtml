@{
    ViewBag.Title = "Select Service";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - RescueBus</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Shared CSS variables and base styles from Index */
        :root {
            --primary: #0066cc;
            --primary-dark: #0052a3;
            --emergency: #e63946;
            --emergency-dark: #c53030;
            --dark: #2d3748;
            --medium: #4a5568;
            --light: #f7fafc;
            --white: #ffffff;
            --shadow-sm: 0 1px 3px rgba(0,0,0,0.12);
            --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
            --shadow-lg: 0 10px 15px rgba(0,0,0,0.1);
            --radius-sm: 4px;
            --radius-md: 8px;
            --radius-lg: 12px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        body {
            line-height: 1.6;
            color: var(--dark);
            background-color: var(--light);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        /* Navigation - Same as Index */
        .navbar {
            background: linear-gradient(135deg, var(--dark) 0%, #1a202c 100%);
            color: var(--white);
            padding: 1rem 0;
            box-shadow: var(--shadow-md);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        /* Service Selection Specific Styles */
        .service-header {
            text-align: center;
            margin: 4rem 0 3rem;
        }

        .service-header h1 {
            font-size: 2.5rem;
            color: var(--dark);
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
        }

        .service-header h1::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: var(--primary);
            border-radius: 2px;
        }

        .service-header p {
            color: var(--medium);
            font-size: 1.1rem;
            max-width: 600px;
            margin: 1rem auto 0;
            line-height: 1.6;
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 3rem 0;
        }

        .service-card {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: 2rem;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-sm);
            border-top: 5px solid var(--primary);
            text-decoration: none;
            color: var(--dark);
            position: relative;
            overflow: hidden;
        }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-lg);
        }

        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: var(--primary);
        }

        .service-icon {
            font-size: 2.5rem;
            color: var(--primary);
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease;
        }

        .service-card:hover .service-icon {
            transform: scale(1.1);
        }

        .service-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: var(--dark);
            position: relative;
            padding-bottom: 0.5rem;
        }

        .service-card h3::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 2px;
            background: rgba(0, 0, 0, 0.1);
        }

        .service-card p {
            color: var(--medium);
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .service-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }

        .service-meta span {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--medium);
            font-size: 0.9rem;
        }

        .service-tag {
            background: rgba(0, 102, 204, 0.1);
            color: var(--primary);
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        /* Responsive Adjustments */

            .services-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">
            </a>
        </div>
    </header>

    <div class="container">
        <div class="service-header">
            <h1>Select Ambulance Service</h1>
            <p>Choose the appropriate level of medical response for your needs</p>
        </div>

        <div class="services-grid">
            <!-- Advanced Life Support -->
            <a href="@Url.Action("Booking", "Booking", new { serviceType = "Advanced Life Support" })" class="service-card">
                <div class="service-icon">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <h3>Advanced Life Support</h3>
                <p>For critical patients requiring continuous medical monitoring and advanced interventions during transport.</p>
                <div class="service-meta">
                    <span><i class="fas fa-clock"></i> 3-5 min response</span>
                    <span class="service-tag">ALS</span>
                </div>
            </a>

            <!-- Basic Life Support -->
            <a href="@Url.Action("Booking", "Booking", new { serviceType = "Basic Life Support" })" class="service-card">
                <div class="service-icon">
                    <i class="fas fa-first-aid"></i>
                </div>
                <h3>Basic Life Support</h3>
                <p>For stable patients requiring medical transport with basic life support capabilities.</p>
                <div class="service-meta">
                    <span><i class="fas fa-clock"></i> 8-12 min response</span>
                    <span class="service-tag">BLS</span>
                </div>
            </a>

            <!-- Patient Transport -->
            <a href="@Url.Action("Booking", "Booking", new { serviceType = "Patient Transport" })" class="service-card">
                <div class="service-icon">
                    <i class="fas fa-procedures"></i>
                </div>
                <h3>Patient Transport</h3>
                <p>Non-emergency medical appointments and transfers between facilities.</p>
                <div class="service-meta">
                    <span><i class="fas fa-clock"></i> 15-30 min response</span>
                    <span class="service-tag">PT</span>
                </div>
            </a>

            <!-- Medical Utility Vehicle -->
            <a href="@Url.Action("Booking", "Booking", new { serviceType = "Medical Utility Vehicle" })" class="service-card">
                <div class="service-icon">
                    <i class="fas fa-truck-medical"></i>
                </div>
                <h3>Medical Utility Vehicle</h3>
                <p>Specialized equipment and personnel transport for unique medical needs.</p>
                <div class="service-meta">
                    <span><i class="fas fa-clock"></i> 10-15 min response</span>
                    <span class="service-tag">MUV</span>
                </div>
            </a>

            <!-- Event Medical Ambulance -->
            <a href="@Url.Action("Booking", "Booking", new { serviceType = "Event Medical Ambulance" })" class="service-card">
                <div class="service-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h3>Event Medical Ambulance</h3>
                <p>On-site medical support for concerts, sports events, and large gatherings.</p>
                <div class="service-meta">
                    <span><i class="fas fa-clock"></i> Scheduled</span>
                    <span class="service-tag">EMA</span>
                </div>
            </a>

            <!-- Air Ambulance -->
            <a href="@Url.Action("Booking", "Booking", new { serviceType = "Air Ambulance" })" class="service-card">
                <div class="service-icon">
                    <i class="fas fa-helicopter"></i>
                </div>
                <h3>Air Ambulance</h3>
                <p>Rapid long-distance critical care transport with specialized medical team.</p>
                <div class="service-meta">
                    <span><i class="fas fa-clock"></i> 30-45 min response</span>
                    <span class="service-tag">AIR</span>
                </div>
            </a>
        </div>
    </div>

    <script>
        // Add click animation to service cards
        document.querySelectorAll('.service-card').forEach(card => {
            card.addEventListener('click', function() {
                this.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    this.style.transform = 'translateY(-10px)';
                }, 200);
            });
        });

        // Highlight current page in navigation
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.classList.contains('active')) {
                link.style.color = 'var(--primary)';
                link.querySelector('i').style.color = 'var(--primary)';
            }
        });
    </script>
</body>
</html>